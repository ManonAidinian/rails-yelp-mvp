<div class="container">

  <h1>Create a new review for <%= @restaurant.name %> :</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, collection: Review::RATING %>
  <%= f.input :content %>
  <%= f.button :submit, class: 'btn btn-primary' %>
  <%end%>

  <%= link_to "Return to restaurant page", restaurant_path(@restaurant) %>

</div>
